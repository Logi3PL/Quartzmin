<div id="sendDataJobFormContainerWizard">
    <h3>Send Data</h3>
    <section>
        <table>
            <tr>
                <td width="400px" >
                    <label for="sendDataTo">To</label>
                    <input type="text" id="sendDataTo"/>
                </td>
                <td width="400px">
                    <label for="sendDataReplyTo">ReplyTo</label>
                    <input type="text" id="sendDataReplyTo" />
                </td>
            </tr>
            <tr>
                <td width="400px" >
                    <label for="sendDataCc">Cc</label>
                    <input type="text" id="sendDataCc"/>
                </td>
                <td width="400px">
                    <label for="sendDataBcc">Bcc</label>
                    <input type="text" id="sendDataBcc" />
                </td>
            </tr>
        </table>
        <label for="sendDataSqlQuery">Sql Query</label>
        <input type="text" id="sendDataSqlQuery" />
        <label for="sendDataSqlQueryToField">Sql Query To Field</label>
        <input type="text" id="sendDataSqlQueryToField" />
        <label for="sendDataSqlQueryCcField">Sql Query Cc Field</label>
        <input type="text" id="sendDataSqlQueryCcField" />
        <label for="sendDataSqlQueryBccField">Sql Query Bcc Field</label>
        <input type="text" id="sendDataSqlQueryBccField" />
        <label for="sendDataSqlQueryReplyToField">Sql Query ReplyTo Field</label>
        <input type="text" id="sendDataSqlQueryReplyToField" />
        <label for="sendDataSqlQueryConStr">Sql Query Connection String</label>
        <input type="text" id="sendDataSqlQueryConStr" />
        <p></p>
        <label for="useSendDataDetailBodyForAll">Herkes icin ayrı ayrı gönder</label>
        <input type="checkbox" id="useSendDataDetailBodyForAll" />
    </section>
    <h3>Send Data Detail</h3>
    <section>
        <label for="sendDataDetailSubject">Konu</label>
        <input id="sendDataDetailSubject" type="text">
        <label for="sendDataDetailHeader">Başlık</label>
        <input id="sendDataDetailHeader" type="text">
        <label for="sendDataDetailContent">İçerik</label>
        <textarea id="sendDataDetailContent" cols="40" rows="5" style="resize: none;"></textarea>
        <label for="sendDataDetailFooter">Alt Bilgi</label>
        <input id="sendDataDetailFooter" type="text">
        <label for="sendDataDetailSqlQuery">Detail Sql Query</label>
        <input type="text" id="sendDataDetailSqlQuery" />
        <label for="sendDataDetailSqlQueryConStr">Detail Sql Query Connection String</label>
        <input type="text" id="sendDataDetailSqlQueryConStr" />
        <p></p>
        <label for="useSendDataDetailQueryForTemplate">Detay sorgu mail içeriğinde kullan</label>
        <input type="checkbox" id="useSendDataDetailQueryForTemplate" />
    </section>
</div>

