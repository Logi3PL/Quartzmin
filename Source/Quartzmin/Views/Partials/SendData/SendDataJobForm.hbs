    $(function () {

        $("#sendDataJobFormContainerWizard").steps({
            headerTag: "h3",
            bodyTag: "section",
            transitionEffect: "slideLeft",
            autoFocus: true,
            enableFinishButton: false
        });

    })

    function SetDataForSendDataJob(model) {
        if (model == undefined || model == null) {
            return;
        }

        $("#sendDataTo").val(model.To);
        $("#sendDataCc").val(model.Cc);
        $("#sendDataBcc").val(model.Bcc);
        $("#sendDataReplyTo").val(model.ReplyTo);
        $("#sendDataSqlQuery").val(model.SqlQuery);
        $("#sendDataSqlQueryToField").val(model.SqlQueryToField);
        $("#sendDataSqlQueryCcField").val(model.SqlQueryCcField);
        $("#sendDataSqlQueryBccField").val(model.SqlQueryBccField);
        $("#sendDataSqlQueryReplyToField").val(model.SqlQueryReplyToField);
        $("#sendDataSqlQueryConStr").val(model.SqlQueryConStr);
        $("#sendDataDetailSubject").val(model.DetailSubject);
        $("#sendDataDetailHeader").val(model.DetailHeader);
        $("#sendDataDetailContent").val(model.DetailContent);
        $("#sendDataDetailFooter").val(model.DetailFooter);
        $("#sendDataDetailSqlQuery").val(model.DetailSqlQuery);
        $("#sendDataDetailSqlQueryConStr").val(model.DetailSqlQueryConStr);

        if (model.DetailBodyForAll) {

            $('#useSendDataDetailBodyForAll').prop("checked", true);

        } else {

            $('#useSendDataDetailBodyForAll').prop("checked", false);

        }

        if (model.DetailQueryForTemplate) {

            $('#useSendDataDetailQueryForTemplate').prop("checked", true);

        } else {

            $('#useSendDataDetailQueryForTemplate').prop("checked", false);

        }

    }

    function GetDataForSendDataJob() {
        var to = $("#sendDataTo").val();
        var cc = $("#sendDataCc").val();
        var bcc = $("#sendDataBcc").val();
        var replyTo = $("#sendDataReplyTo").val();
        var sqlQuery = $("#sendDataSqlQuery").val();
        var sqlQueryToField = $("#sendDataSqlQueryToField").val();
        var sqlQueryCcField = $("#sendDataSqlQueryCcField").val();
        var sqlQueryBccField = $("#sendDataSqlQueryBccField").val();
        var sqlQueryReplyToField = $("#sendDataSqlQueryReplyToField").val();
        var sqlQueryConStr = $("#sendDataSqlQueryConStr").val();
        var detailBodyForAll = $("#useSendDataDetailBodyForAll").prop("checked");
        var detailSubject = $("#sendDataDetailSubject").val();
        var detailHeader = $("#sendDataDetailHeader").val();
        var detailContent = $("#sendDataDetailContent").val();
        var detailFooter = $("#sendDataDetailFooter").val();
        var detailSqlQuery = $("#sendDataDetailSqlQuery").val();
        var detailSqlQueryConStr = $("#sendDataDetailSqlQueryConStr").val();
        var detailQueryForTemplate = $("#useSendDataDetailQueryForTemplate").prop("checked");

        return {
            To: to, Cc: cc, Bcc: bcc, ReplyTo :replyTo, SqlQuery: sqlQuery, SqlQueryToField: sqlQueryToField, SqlQueryCcField: sqlQueryCcField, SqlQueryBccField: sqlQueryBccField, SqlQueryReplyToField:sqlQueryReplyToField, SqlQueryConStr: sqlQueryConStr,
            DetailBodyForAll: detailBodyForAll, DetailSubject: detailSubject, DetailHeader: detailHeader, DetailContent: detailContent, DetailFooter: detailFooter,
            DetailSqlQuery: detailSqlQuery, DetailSqlQueryConStr: detailSqlQueryConStr, DetailQueryForTemplate: detailQueryForTemplate
        };
    }

</script>
